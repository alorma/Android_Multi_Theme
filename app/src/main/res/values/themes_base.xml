<resources>

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">?colorPrimarySurface</item>
    </style>

    <style name="Theme.Purple.Base" parent="Theme.Base" >
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium.Green</item>
    </style>

    <style name="Theme.Orange.Base" parent="Theme.Base" >
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium.Orange</item>
    </style>

    <style name="Theme.Green.Base" parent="Theme.Base" >
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium.Purple</item>
    </style>

    <style name="ShapeAppearance.App.Medium.Purple" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.Medium.Orange" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.Medium.Green" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>
</resources>